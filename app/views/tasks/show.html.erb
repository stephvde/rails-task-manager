<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>

<% if @task.completed? then%>
  <p><input type="checkbox"  checked > This task is completed</p>

  <%else%>
  <p><input type="checkbox">
    This task is not yet completed </p>
<% end %>

<p> <%= link_to "Back to list", tasks_path %></p>

<p> <%= link_to "Edit the task", edit_path%></p>
